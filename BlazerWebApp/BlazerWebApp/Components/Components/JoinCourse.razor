@rendermode InteractiveAuto

<div class="course-includes">
    <h4 class="header4">This course includes</h4>
    <p class="m-text"><i class="fa-light fa-tv-retro"></i> 148 hours on-demand video</p>
    <p class="m-text"><i class="fa-light fa-book"></i> 18 articles</p>
    <p class="m-text"><i class="fa-sharp fa-regular fa-download"></i> 25 downloadable resources</p>
    <p class="m-text"><i class="fa-solid fa-infinity"></i> Full lifetime access</p>
    <p class="m-text"><i class="fa-regular fa-trophy"></i> Certificate of completion</p>

    <div class="course-price">
        <p class="header2">$28.99</p>
        <p class="xl-text">$49.00</p>
    </div>
    <form method="post">
        <input type="hidden" name="courseId" value="" />
        <button asp-action="SaveCourse" asp-controller="Courses" class="btn-theme">Join course</button>
    </form>
</div>

